<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:id="@+id/moview_image_carview"
        android:layout_width="80dp"
        android:layout_height="100dp"
        app:cardCornerRadius="10dp"
        app:cardPreventCornerOverlap="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/moview_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/moview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-black"
        app:layout_constraintStart_toEndOf="@+id/moview_image_carview"
        app:layout_constraintTop_toTopOf="@+id/moview_image_carview" />


    <RatingBar
        android:id="@+id/moview_rating"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:numStars="10"
        app:layout_constraintStart_toStartOf="@+id/moview_title"
        app:layout_constraintTop_toBottomOf="@+id/moview_title" />

    <TextView
        android:id="@+id/moview_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        android:maxLines="2"
        app:layout_constraintBottom_toBottomOf="@+id/moview_image_carview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/moview_title" />

</androidx.constraintlayout.widget.ConstraintLayout>